{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && npm install",
    "build": "npm run install:all && npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd apps/frontend && npm run start",
    "start:backend": "cd apps/backend && npm run start:prod",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run start:dev"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "engines": {
    "node": "18.x"
  }
}